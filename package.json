  "bugs": {
    "url": "https://github.com/swarmcity/boardwalk-sdk/issues"
  },
  "homepage": "https://github.com/swarmcity/boardwalk-sdk#readme",
  "devDependencies": {
    "@jest/types": "^29.3.1",
    "@typechain/ethers-v5": "^10.1.1",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "ethers": "*",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "ethers": ">=5.7.2"
  }
