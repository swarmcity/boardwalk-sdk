{
  "name": "boardwalk-sdk",
  "version": "0.1.0",
  "description": "",
  "module": "dist/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "postinstall": "npm run blockchain:prepare && npm run blockchain:build && npm run blockchain:build-types",
    "build": "rimraf dist && tsc -p tsconfig.json && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist/types",
    "check:types": "tsc --project tsconfig.test.json",
    "test": "jest --verbose --detectOpenHandles",
    "blockchain": "anvil",
    "blockchain:prepare": "cd ./boardwalk-contracts && npm ci && echo 'test test test test test test test test test test test junk' > mnemonic && cd ..",
    "blockchain:build": "cd ./boardwalk-contracts && forge build --sizes &&  cd ..",
    "blockchain:build-types": "./generate-types.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swarmcity/boardwalk-sdk.git"
  },
  "author": "",
